{# purpose of this template: module configuration page #}
{% extends 'MUShareModule::adminBase.html.twig' %}
{% block title __('Settings') %}
{% block admin_page_icon 'wrench' %}
{% block content %}
    <div class="musharemodule-config">
        {% form_theme form with [
            '@MUShareModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(form) }}
        <div class="zikula-bootstrap-tab-container">
            <ul class="nav nav-tabs">
                {% set tabTitle = __('General') %}
                <li role="presentation" class="active">
                    <a id="vars1Tab" href="#tab1" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
                </li>
                {% set tabTitle = __('List views') %}
                <li role="presentation">
                    <a id="vars2Tab" href="#tab2" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
                </li>
                {% set tabTitle = __('Integration') %}
                <li role="presentation">
                    <a id="vars3Tab" href="#tab3" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
                </li>
                {% set tabTitle = __('Geo') %}
                <li role="presentation">
                    <a id="vars4Tab" href="#tab4" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
                </li>
                {% set tabTitle = __('Workflows') %}
                <li role="presentation">
                    <a id="workflowsTab" href="#tabWorkflows" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
                </li>
            </ul>

            {{ form_errors(form) }}
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active" id="tab1" aria-labelledby="vars1Tab">
                    {% set tabTitle = __('General') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                    
                        <p class="alert alert-info">{{ __('Here you can manage all basic settings for this application.') }}</p>
                    
                        {{ form_row(form.zicCode) }}
                        {{ form_row(form.city) }}
                        {{ form_row(form.state) }}
                        {{ form_row(form.offersPerPage) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tab2" aria-labelledby="vars2Tab">
                    {% set tabTitle = __('List views') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                    
                        <p class="alert alert-info">{{ __('Here you can configure parameters for list views.')|nl2br }}</p>
                    
                        {{ form_row(form.locationEntriesPerPage) }}
                        {{ form_row(form.linkOwnLocationsOnAccountPage) }}
                        {{ form_row(form.offerEntriesPerPage) }}
                        {{ form_row(form.linkOwnOffersOnAccountPage) }}
                        {{ form_row(form.poolEntriesPerPage) }}
                        {{ form_row(form.linkOwnPoolsOnAccountPage) }}
                        {{ form_row(form.companyEntriesPerPage) }}
                        {{ form_row(form.linkOwnCompaniesOnAccountPage) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tab3" aria-labelledby="vars3Tab">
                    {% set tabTitle = __('Integration') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                    
                        <p class="alert alert-info">{{ __('These options allow you to configure integration aspects.')|nl2br }}</p>
                    
                        {{ form_row(form.enabledFinderTypes) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tab4" aria-labelledby="vars4Tab">
                    {% set tabTitle = __('Geo') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                    
                        <p class="alert alert-info">{{ __('Here you can define settings related to geographical features.')|nl2br }}</p>
                    
                        {{ form_row(form.defaultLatitude) }}
                        {{ form_row(form.defaultLongitude) }}
                        {{ form_row(form.defaultZoomLevel) }}
                        {{ form_row(form.tileLayerUrl) }}
                        {{ form_row(form.tileLayerAttribution) }}
                        {{ form_row(form.enableLocationGeoLocation) }}
                        {{ form_row(form.enableOfferGeoLocation) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tabWorkflows" aria-labelledby="workflowsTab">
                    {% set tabTitle = __('Workflows') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
                        <p class="alert alert-info">{{ __('Here you can inspect and amend the existing workflows.') }}</p>
                
                        <h4>{{ __('Locations') }}</h4>
                        <p><a href="{{ path('zikula_workflow_editor_index', {workflow: 'musharemodule_none'}) }}" title="{{ __('Edit workflow for locations') }}" target="_blank"><i class="fa fa-cubes"></i> {{ __('Edit locations workflow') }}</a>
                        <h4>{{ __('Offers') }}</h4>
                        <p><a href="{{ path('zikula_workflow_editor_index', {workflow: 'musharemodule_none'}) }}" title="{{ __('Edit workflow for offers') }}" target="_blank"><i class="fa fa-cubes"></i> {{ __('Edit offers workflow') }}</a>
                        <h4>{{ __('Pools') }}</h4>
                        <p><a href="{{ path('zikula_workflow_editor_index', {workflow: 'musharemodule_none'}) }}" title="{{ __('Edit workflow for pools') }}" target="_blank"><i class="fa fa-cubes"></i> {{ __('Edit pools workflow') }}</a>
                        <h4>{{ __('Companies') }}</h4>
                        <p><a href="{{ path('zikula_workflow_editor_index', {workflow: 'musharemodule_none'}) }}" title="{{ __('Edit workflow for companies') }}" target="_blank"><i class="fa fa-cubes"></i> {{ __('Edit companies workflow') }}</a>
                    </fieldset>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_widget(form.save) }}
                {{ form_widget(form.cancel) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
