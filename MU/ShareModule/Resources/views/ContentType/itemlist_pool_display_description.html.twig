{# Purpose of this template: Display pools within an external context #}
<dl>
    {% for pool in items %}
        <dt>{{ pool|musharemodule_formattedTitle }}</dt>
        {% if pool.collectionOfPool %}
            <dd>{{ pool.collectionOfPool|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('musharemodule_pool_display', {'id': pool.getId()}) }}" title="{{ __('Read more')|e('html_attr') }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
