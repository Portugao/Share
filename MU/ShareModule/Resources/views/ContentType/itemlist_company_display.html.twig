{# Purpose of this template: Display companies within an external context #}
{% for company in items %}
    <h3>{{ company|musharemodule_formattedTitle }}</h3>
    <p><a href="{{ path('musharemodule_company_display', {'id': company.getId()}) }}" title="{{ __('Read more')|e('html_attr') }}">{{ __('Read more') }}</a>
    </p>
{% endfor %}
