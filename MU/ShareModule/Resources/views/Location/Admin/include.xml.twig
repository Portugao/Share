{# purpose of this template: locations xml inclusion template #}
<location id="{{ location.getId() }}" createdon="{{ location.createdDate|localizeddate('medium', 'short') }}" updatedon="{{ location.updatedDate|localizeddate('medium', 'short') }}">
    <id>{{ location.id }}</id>
    <title><![CDATA[{{ location.title }}]]></title>
    <street><![CDATA[{{ location.street }}]]></street>
    <numberOfStreet><![CDATA[{{ location.numberOfStreet }}]]></numberOfStreet>
    <zipCode><![CDATA[{{ location.zipCode }}]]></zipCode>
    <city><![CDATA[{{ location.city }}]]></city>
    <forMap>{% if not location.forMap %}0{% else %}1{% endif %}</forMap>
    <radius>{{ location.radius }}</radius>
    <zipCodes><![CDATA[{{ location.zipCodes }}]]></zipCodes>
    <searchOptions>{{ location.searchOptions|musharemodule_listEntry('location', 'searchOptions') }}</searchOptions>
    <private>{% if not location.private %}0{% else %}1{% endif %}</private>
    <name><![CDATA[{{ location.name }}]]></name>
    <description><![CDATA[{{ location.description|safeHtml }}]]></description>
    <mail>{{ location.mail }}</mail>
    <website>{{ location.website }}</website>
    <phone><![CDATA[{{ location.phone }}]]></phone>
    <mobile><![CDATA[{{ location.mobile }}]]></mobile>
    <latitude>{{ location.latitude|musharemodule_geoData }}</latitude>
    <longitude>{{ location.longitude|musharemodule_geoData }}</longitude>
    <workflowState>{{ location.workflowState|musharemodule_objectState(false)|lower }}</workflowState>
    <offerOfLocation>
    {% if location.offerOfLocation|default %}
        {% for relatedItem in location.offerOfLocation %}
        <offer>{{ relatedItem|musharemodule_formattedTitle }}</offer>
        {% endfor %}
    {% endif %}
    </offerOfLocation>
</location>
