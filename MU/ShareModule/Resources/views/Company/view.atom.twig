{# purpose of this template: companies atom feed #}
<?xml version="1.0" encoding="{% set charset = pageGetVar('meta.charset') %}{% if charset == 'ISO-8859-15' %}ISO-8859-1{% else %}{{ charset }}{% endif %}" ?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text">{{ __('Latest companies') }}</title>
    <subtitle type="text">{{ __('A direct feed showing the list of companies') }} - {{ getModVar('ZConfig', 'slogan') }}</subtitle>
    <author>
        <name>{{ getModVar('ZConfig', 'sitename') }}</name>
    </author>
{% set amountOfItems = items|length %}
{% if amountOfItems > 0 %}
{% set uniqueID %}tag:{{ app.request.schemeAndHttpHost|replace({'http://': '', '/': ''}) }},{{ items.first.createdDate|date('Y-m-d') }}:{{ path('musharemodule_company_' ~ routeArea ~ 'display', {'id': items.first.getId()}) }}{% endset %}
    <id>{{ uniqueID }}</id>
    <updated>{{ items[0].updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
{% endif %}
    <link rel="alternate" type="text/html" hreflang="{{ app.request.locale }}" href="{{ url('musharemodule_company_' ~ routeArea ~ 'index') }}" />
    <link rel="self" type="application/atom+xml" href="{{ app.request.schemeAndHttpHost ~ app.request.basePath }}" />
    <rights>Copyright (c) {{ 'now'|date('Y') }}, {{ app.request.schemeAndHttpHost }}</rights>
{% for company in items %}
    <entry>
        <title type="html">{{ company|musharemodule_formattedTitle|notifyFilters('musharemodule.filterhook.companies')|safeHtml }}</title>
        <link rel="alternate" type="text/html" href="{{ url('musharemodule_company_' ~ routeArea ~ 'display', {'id': company.getId()}) }}" />
        {% set uniqueID %}tag:{{ app.request.schemeAndHttpHost|replace({ 'http://': '', '/': '' }) }},{{ company.createdDate|date('Y-m-d') }}:{{ path('musharemodule_company_' ~ routeArea ~ 'display', {'id': company.getId()}) }}{% endset %}
        <id>{{ uniqueID }}</id>
        {% if company.updatedDate|default %}
            <updated>{{ company.updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
        {% endif %}
        {% if company.createdDate|default %}
            <published>{{ company.createdDate|date('Y-m-dTH:M:SZ') }}</published>
        {% endif %}
        {% if company.createdBy|default and company.createdBy.getUid() > 0 %}
            {% set creatorAttributes = company.createdBy.getAttributes() %}
            <author>
               <name>{{ creatorAttributes.get('realname')|default(creatorAttributes.get('name'))|default(company.createdBy.getUname()) }}</name>
               <uri>{{ creatorAttributes.get('_UYOURHOMEPAGE')|default('-') }}</uri>
               <email>{{ company.createdBy.getEmail() }}</email>
            </author>
        {% endif %}
        <summary type="html">
            <![CDATA[
            {{ company.description|truncate(150, true, '&hellip;')|default('-') }}
            ]]>
        </summary>
        <content type="html">
            <![CDATA[
            {{ company.name|replace({ '<br>': '<br />' }) }}
            ]]>
        </content>
    </entry>
{% endfor %}
</feed>
