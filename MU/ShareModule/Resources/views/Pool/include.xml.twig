{# purpose of this template: pools xml inclusion template #}
<pool id="{{ pool.getId() }}" createdon="{{ pool.createdDate|localizeddate('medium', 'short') }}" updatedon="{{ pool.updatedDate|localizeddate('medium', 'short') }}">
    <id>{{ pool.id }}</id>
    <collectionOfPool><![CDATA[{{ pool.collectionOfPool }}]]></collectionOfPool>
    <workflowState>{{ pool.workflowState|musharemodule_objectState(false)|lower }}</workflowState>
    <offers>
    {% if pool.offers|default %}
        {% for relatedItem in pool.offers %}
        <offer>{{ relatedItem|musharemodule_formattedTitle }}</offer>
        {% endfor %}
    {% endif %}
    </offers>
</pool>
